# Supabase Self-Hosted Configuration
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED - Generate these securely
# ============================================

# PostgreSQL password
POSTGRES_PASSWORD=your-super-secret-password

# JWT Secret (min 32 chars) - used for signing tokens
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long

# Secret Key Base (min 64 chars) - used for realtime
# Generate with: openssl rand -base64 64
SECRET_KEY_BASE=your-super-secret-key-base-of-at-least-64-characters

# Anon Key - JWT token with role=anon
# Generate at: https://supabase.com/docs/guides/self-hosting/docker#generate-api-keys
ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Service Role Key - JWT token with role=service_role
# Generate at: https://supabase.com/docs/guides/self-hosting/docker#generate-api-keys
SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================
# URLs
# ============================================

# Your site URL (where the app runs)
SITE_URL=http://localhost:3000

# API external URL (Kong gateway)
API_EXTERNAL_URL=http://localhost:8000

# Public Supabase URL (for clients)
SUPABASE_PUBLIC_URL=http://localhost:8000

# Additional OAuth redirect URLs (comma separated)
ADDITIONAL_REDIRECT_URLS=

# ============================================
# AUTH SETTINGS
# ============================================

# Disable signup (set to true to prevent new registrations)
DISABLE_SIGNUP=false

# Auto-confirm email (set to true for development)
ENABLE_EMAIL_AUTOCONFIRM=true

# Enable anonymous users
ENABLE_ANONYMOUS_USERS=false

# JWT expiry in seconds (3600 = 1 hour)
JWT_EXPIRY=3600

# ============================================
# SMTP (Optional - for email auth)
# ============================================

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_ADMIN_EMAIL=

# ============================================
# GOOGLE AUTH (Optional)
# ============================================

ENABLE_GOOGLE_AUTH=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ============================================
# STUDIO SETTINGS
# ============================================

STUDIO_DEFAULT_ORGANIZATION=AB Testing
STUDIO_DEFAULT_PROJECT=Shopify Price Tests

# ============================================
# LOGGING (Optional)
# ============================================

LOGFLARE_API_KEY=
